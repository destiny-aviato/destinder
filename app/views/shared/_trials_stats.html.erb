                                                        <div class="chip tooltipped" style='<%= badge.custom_fields[:color] %>'data-position="top" data-delay="50" data-tooltip="<%= badge.description %>">
                                                            <%= badge.name %>
                                                            <%= badge.custom_fields[:icon].html_safe %>
                                                        </div>                
                                                    <% end %>
                                                <% end %>
                                            </div>
                                        </div>
                                    <% end %>
