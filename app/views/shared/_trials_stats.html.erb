                                                <% next if ["emblem_background", "emblem"].include?(item[0])  %>
                                                <% if item[1]["Item Tier"] == "Exotic" %>
                                                    <% if ["Chest Armor", "Gauntlets", "Helmet", "Leg Armor"].include? (item[0])  %>
