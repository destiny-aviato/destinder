                                                            <span class="truncate" style="font-size: 0.8em;"><%= item[1]["Item Name"] %></span> 
                                                        </div>
                                                        <% break %>                                                                                                                     
                                                    <% end %>
                                                <% end %>
                                                <% if index == x["Character Items"].size - 1 %>                                                
